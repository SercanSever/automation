@using Automation.Entities.Concrete;
@model Product
@{
    ViewBag.Title = "AddProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container-fluid p-4">
    <ol class="breadcrumb shadow">
        <li class="breadcrumb-item lead"><strong>Ürün Ekle</strong></li>
    </ol>
    <div class="row p-2 shadow">
        <form class="col-sm-4" method="post">
            <div class="form-group">
                @Html.Label("Ürün Adı : ")
                @Html.TextBoxFor(x => x.ProductName, new { @class = "form-control"})
                <small id="productNameValidation" class="form-text text-muted">Ürün adı 50 karakteri geçemez.</small>
            </div>
            <div class="form-group">
                @Html.Label("Kategori : ")
                @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.listItems, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.Label("Marka : ")
                @Html.TextBoxFor(x => x.Brand, new { @class = "form-control"})
            </div>
            <div class="form-group">
                @Html.Label("Fiyat : ")
                @Html.TextBoxFor(x => x.UnitPrice, new { @class = "form-control", @placeholder = "₺" })
            </div>
            <div class="form-group">
                @Html.Label("Stok Miktarı : ")
                @Html.TextBoxFor(x => x.UnitInStock, new { @class = "form-control"})
            </div>
            <div class="form-group">
                @Html.Label("Resin : ")
                @Html.TextBoxFor(x => x.ProductImage, new { @class = "form-control"})
            </div>
            <button type="submit" class="btn btn-primary">Kaydet</button>
        </form>
    </div>
</div>



