@using AutomationUI.Models
@model SalesDetailListViewModel
@{
    ViewBag.Title = "CustomerDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container-fluid">
    <ol class="breadcrumb mt-3 shadow">
        <li class="breadcrumb-item lead"><strong>Alışveriş Geçmişi</strong></li>
    </ol>
    <a class="btn btn-danger ml-sm-3 mb-sm-3 shadow" href="/Departments/AddDepartment">Yazdır</a>
    <table id="example" class="trow-border hover order-column shadow">
        <thead>
            <tr>
                <th>Müşteri</th>
                <th>Ürün</th>
                <th>Personel</th>
                <th>Fiyat</th>
                <th>Adet</th>
                <th>Toplam</th>
                <th>Tarih</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var customer in Model.SalesDetails)
            {
                <tr>
                    <td class="p-2">@customer.Customer.CustomerName @customer.Customer.CustomerSurname</td>
                    <td class="p-2">@customer.Product.ProductName</td>
                    <td class="p-2">@customer.Employee.EmployeeName @customer.Employee.EmployeeSurname</td>
                    <td class="p-2">@customer.SalesDetailPrice</td>
                    <td class="p-2">@customer.SalesDetailQuantity</td>
                    <td class="p-2">@customer.SalesDetailTotal</td>
                    <td class="p-2">@customer.SalesDetailDate</td>
                    @*<td class="text-sm-left">
                            <a class="btn btn-success btn-sm text-center mr-4" href="/Departments/DepartmentEmployeeSales/@customer.DepartmentId">Detay</a>
                        </td>*@
                    @*@if (customer.IsActive)
                        {
                            <td class="text-sm-left">
                                    <a class="btn btn-danger btn-sm text-center mr-4" href="/Categories/DeleteCategory/@employee.Id">Kaldır</a>
                                </td>
                        }
                        else
                        {
                            <td class="text-sm-left">
                                    <a class="btn btn-primary btn-sm text-center mr-4" href="/Categories/DeleteCategory/@employee.CategoryId">Ekle</a>
                                </td>
                        }*@
                </tr>
            }
        </tbody>

    </table>
</div>


