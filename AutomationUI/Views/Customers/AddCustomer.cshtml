@using Automation.Entities.Concrete
@model Customer
@{
    ViewBag.Title = "AddCustomer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid p-4">
    <ol class="breadcrumb shadow">
        <li class="breadcrumb-item lead"><strong>Müşteri Ekle</strong></li>
    </ol>
    <div class="row p-2 shadow">
        <form class="col-sm-4" method="post">
            <div class="form-group">
                @Html.Label("Adı : ")
                @Html.TextBoxFor(x => x.CustomerName, new { @class = "form-control" })
                <small id="customerNameValidation" class="form-text text-muted">Müşteri adı 50 karakteri geçemez.</small>
            </div>
            <div class="form-group">
                @Html.Label("Soyadı : ")
                @Html.TextBoxFor(x => x.CustomerSurname, new { @class = "form-control" })
                <small id="customerSurnamValidation" class="form-text text-muted">Müşteri soyadı 50 karakteri geçemez.</small>
            </div>
            <div class="form-group">
                @Html.Label("Email : ")
                @Html.TextBoxFor(x => x.CustomerEmail, new { @class = "form-control" })
                <small id="customerEmailValidation" class="form-text text-muted">Müşteri emaili 50 karakteri geçemez.</small>
            </div>
            <div class="form-group">
                @Html.Label("Şehir : ")
                @Html.TextBoxFor(x => x.CustomerCity, new { @class = "form-control" })
                <small id="customerCityValidation" class="form-text text-muted">Müşteri şehri 50 karakteri geçemez.</small>
            </div>
            <button type="submit" class="btn btn-primary">Kaydet</button>
        </form>
    </div>
</div>



