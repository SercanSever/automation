@using Automation.Entities.Concrete;
@model Category
@{
    ViewBag.Title = "AddCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container-fluid p-5">
    <h2>Kategori Ekle</h2>
    <div class="row p-2 shadow">
        <form class="col-sm-4">
            <div class="form-group">
                <label for="categoryName">Kategori Adı : </label>
                <input type="email" class="form-control" id="categoryName" placeholder="Giyim, Sanat, Spor..">
                <small id="categoryNameValidation" class="form-text text-muted">Kategori adı 50 karakteri geçemez.</small>
            </div>
            <div class="form-check mb-2">
                <input type="checkbox" class="form-check-input" id="checkIsActive">
                <label class="form-check-label" for="checkIsActive">Aktif / Pasif</label>
            </div>
            <button type="submit" class="btn btn-primary">Kaydet</button>
        </form>
    </div>
</div>


