@using Automation.Entities.Concrete;
@model Employee
@{
    ViewBag.Title = "AddEmployee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("AddEmployee", "Employees", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="container-fluid p-4">
        <ol class="breadcrumb shadow">
            <li class="breadcrumb-item lead"><strong>Personel Ekle</strong></li>
        </ol>
        <div class="row p-2 shadow">
            <form class="col-sm-4" method="post">
                <div class="form-group col-sm-5">
                    @Html.Label("Adı : ")
                    @Html.TextBoxFor(x => x.EmployeeName, new { @class = "form-control", @placeholder = "" })
                    <small id="departmentNameValidation" class="form-text text-muted">Müşteri adı 50 karakteri geçemez.</small>
                </div>
                <div class="form-group col-sm-5">
                    @Html.Label("Soyadı : ")
                    @Html.TextBoxFor(x => x.EmployeeSurname, new { @class = "form-control", @placeholder = "" })
                    <small id="departmentNameValidation" class="form-text text-muted">Müşteri soyadı 50 karakteri geçemez.</small>
                </div>
                <div class="form-group col-sm-5">
                    @Html.Label("Departman : ")
                    @Html.DropDownListFor(x => x.DepartmentId, (List<SelectListItem>)ViewBag.departmentList, new { @class = "form-control" })
                </div>
                <div class="form-group col-sm-5">
                    @Html.Label("Personel Fotoğrafı : ")
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="inputGroupFileAddon01">Upload</span>
                        </div>
                        <div class="custom-file">
                            <input type="file" class="custom-file-input" name="employeeImage" id="inputGroupFile01" aria-describedby="inputGroupFileAddon01">
                            <label class="custom-file-label" for="inputGroupFile01">Fotoğraf Seçiniz..</label>
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary col-sm-3 offset-4">Kaydet</button>
            </form>
        </div>
    </div>

}




