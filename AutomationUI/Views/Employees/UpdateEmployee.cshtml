@using Automation.Entities.Concrete;
@model Employee
@{
    ViewBag.Title = "UpdateEmployee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("UpdateEmployee", "Employees", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="container-fluid p-4">
        <ol class="breadcrumb shadow">
            <li class="breadcrumb-item lead"><strong>Departman Güncelle</strong></li>
        </ol>
        @Html.HiddenFor(x => x.EmployeeId)
        <div class="row p-2 shadow ">
            <div class="col-sm-4">
                <div class="form-group">
                    @Html.Label("Adı : ")
                    @Html.TextBoxFor(x => x.EmployeeName, new { @class = "form-control", @placeholder = "Giyim, Spor.." })
                    <small id="categoryNameValidation" class="form-text text-muted">Departman adı 50 karakteri geçemez.</small>
                </div>
                <div class="form-group">
                    @Html.Label("Soyadı : ")
                    @Html.TextBoxFor(x => x.EmployeeSurname, new { @class = "form-control", @placeholder = "Giyim, Spor.." })
                    <small id="categoryNameValidation" class="form-text text-muted">Departman adı 50 karakteri geçemez.</small>
                </div>
                <div class="form-group">
                    @Html.Label("Departman : ")
                    @Html.DropDownListFor(x => x.DepartmentId, (List<SelectListItem>)ViewBag.departmentList, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.Label("Personel Fotoğrafı : ")
                    <div class="input-group mb-3">
                        <input type="file" name="employeeImage">
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Güncelle</button>
            </div>
        </div>
    </div>
}



