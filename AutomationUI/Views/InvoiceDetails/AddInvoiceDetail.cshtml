@using Automation.Entities.Concrete;
@model InvoiceDetail
@{
    ViewBag.Title = "AddInvoiceDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container-fluid p-4">
    <ol class="breadcrumb shadow">
        <li class="breadcrumb-item lead"><strong>Açıklama Ekle</strong></li>
    </ol>
    <div class="row p-2 shadow">
        <form class="col-sm-4" method="post">
            <div class="form-group">
                @Html.Label("Açıklama : ")
                @Html.TextBoxFor(x => x.InvoiceContentDescription, new { @class = "form-control", @placeholder = "" })
                <small id="departmentNameValidation" class="form-text text-muted">Müşteri adı 50 karakteri geçemez.</small>
            </div>
            <button type="submit" class="btn btn-primary">Kaydet</button>
        </form>
    </div>
</div>



