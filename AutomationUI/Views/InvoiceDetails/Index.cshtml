@using AutomationUI.Models
@model InvoiceDetailListViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container-fluid p-4">
    <ol class="breadcrumb shadow">
        <li class="breadcrumb-item lead"><strong>Fatura Detayları</strong></li>
    </ol>
    <div class="row mt-3 mb-5 border-bottom border-top">
        <a class="btn btn-primary ml-sm-3 shadow" href="/Invoice/AddInvoice">Yazdır</a>
        <table id="invoiceDetailsTable" class="table table-hover table-striped table-sm p-sm-1 mt-2 mb-5 shadow">
            <thead>
                <tr>
                    <th>Seri No </th>
                    <th>Sıra No</th>
                    <th>Tarih</th>
                    <th>Saat</th>
                    <th>Teslim Eden</th>
                    <th>Teslim Alan</th>
                    <th>Açıklama</th>
                    <th>Adet</th>
                    <th>Fiyat</th>
                    <th>Toplam Tutar</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var invoiceDetails in Model.InvoiceDetails)
                {
                    <tr>
                        <td class="p-2">@invoiceDetails.Invoice.InvoiceSerial</td>
                        <td class="p-2">@invoiceDetails.Invoice.InvoiceOrder</td>
                        <td class="p-2">@invoiceDetails.Invoice.InvoiceDate</td>
                        <td class="p-2">@invoiceDetails.Invoice.InvoiceHour</td>
                        <td class="p-2">@invoiceDetails.Invoice.InvoiceDeliverer</td>
                        <td class="p-2">@invoiceDetails.Invoice.InvoiceReceiver</td>
                        <td class="p-2">@invoiceDetails.InvoiceContentDescription</td>
                        <td class="p-2">@invoiceDetails.InvoiceContentQuantity</td>
                        <td class="p-2">@invoiceDetails.InvoiceContentUnitPrice</td>
                        <td class="p-2">@invoiceDetails.InvoiceContentTotal</td>
                        <td class="text-sm-right">
                            <a class="btn btn-success btn-sm mr-4" href="/InvoiceDetails/UpdateInvoiceDetail/@invoiceDetails.InvoiceId">Açıklama Güncelle</a>
                        </td>
                    </tr>


                    @*@if (!invoiceDetails.IsActive)
                        {
                            <td class="p-2 text-center"><img style="width:23px" src="~/Icons/redCircle.png" alt="" /></td>
                        }
                        else
                        {
                            <td class="p-2 text-center"><img style="width:23px" src="~/Icons/greenCircle.png" alt="" /></td>
                        }*@

                    @*<td><a class="btn btn-warning btn-sm mr-4" href="/InvoiceDetails/Index/@invoice.InvoiceId">Detay</a></td>

                            <td class="text-sm-right">
                                <a class="btn btn-warning btn-sm mr-4" href="/Invoices/UpdateInvoice/@invoice.InvoiceId">Güncelle</a>
                            </td>
                            @if (invoice.IsActive)
                            {
                                <td class="text-sm-left">
                                    <a class="btn btn-danger btn-sm text-center mr-4" href="/Invoices/DeleteInvoice/@invoice.InvoiceId">Kaldır</a>
                                </td>
                            }
                            else
                            {
                                <td class="text-sm-left">
                                    <a class="btn btn-primary btn-sm text-center mr-4" href="/Invoices/DeleteInvoice/@invoice.InvoiceId">Ekle</a>
                                </td>
                            }
                        </tr>*@
                }
            </tbody>
        </table>
    </div>
</div>
@Html.Partial("_Datatable")
<script>
    $('#invoiceDetailsTable').DataTable({
        "language": {
            "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Turkish.json"
        }
    });

</script>




