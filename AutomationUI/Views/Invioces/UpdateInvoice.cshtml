@using Automation.Entities.Concrete;
@model Invoice
@{
    ViewBag.Title = "UpdateInvoice";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@using (Html.BeginForm("UpdateInvoice", "Invoices", FormMethod.Post))
{
    <div class="container-fluid p-4">
        <ol class="breadcrumb shadow">
            <li class="breadcrumb-item lead"><strong>Fatura Güncelle</strong></li>
        </ol>
        @Html.HiddenFor(x => x.InvoiceId)
        <div class="row p-2 shadow ">
            <div class="col-sm-4">
                <div class="form-group">
                    @Html.Label("Seri No : ")
                    @Html.TextBoxFor(x => x.InvoiceSerial, new { @class = "form-control", @placeholder = "Giyim, Spor.." })
                    <small id="categoryNameValidation" class="form-text text-muted">Departman adı 50 karakteri geçemez.</small>
                </div>
                <div class="form-group">
                    @Html.Label("Sıra No : ")
                    @Html.TextBoxFor(x => x.InvoiceOrder, new { @class = "form-control", @placeholder = "Giyim, Spor.." })
                    <small id="categoryNameValidation" class="form-text text-muted">Departman adı 50 karakteri geçemez.</small>
                </div>
                <div class="form-group">
                    @Html.Label("Tarih : ")
                    @Html.TextBoxFor(x => x.InvoiceDate, new { @class = "form-control", @placeholder = "" })
                    <small id="departmentNameValidation" class="form-text text-muted">Müşteri soyadı 50 karakteri geçemez.</small>
                </div>
                <div class="form-group">
                    @Html.Label("Saat : ")
                    @Html.TextBoxFor(x => x.InvoiceHour, new { @class = "form-control", @placeholder = "" })
                    <small id="departmentNameValidation" class="form-text text-muted">Müşteri soyadı 50 karakteri geçemez.</small>
                </div>
                <div class="form-group">
                    @Html.Label("Teslim Eden : ")
                    @Html.TextBoxFor(x => x.InvoiceDeliverer, new { @class = "form-control", @placeholder = "" })
                    <small id="departmentNameValidation" class="form-text text-muted">Müşteri adı 50 karakteri geçemez.</small>
                </div>
                <div class="form-group">
                    @Html.Label("Teslim Alan : ")
                    @Html.TextBoxFor(x => x.InvoiceReceiver, new { @class = "form-control", @placeholder = "" })
                    <small id="departmentNameValidation" class="form-text text-muted">Müşteri adı 50 karakteri geçemez.</small>
                </div>
                <button type="submit" class="btn btn-primary">Güncelle</button>
            </div>
        </div>
    </div>
}





