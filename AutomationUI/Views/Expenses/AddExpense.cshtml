@using Automation.Entities.Concrete
@model Expense
@{
    ViewBag.Title = "AddExpense";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="container-fluid">
    <ol class="breadcrumb shadow">
        <li class="breadcrumb-item lead mb-sm-2"><strong>Gider Ekle</strong></li>
    </ol>
    <div class="row p-2 shadow">
        <form class="col-sm-4" method="post">
            <div class="form-group">
                @Html.Label("Açıklama : ")
                @Html.TextAreaFor(x => x.ExpenseDescription, new { @class = "form-control multyple" })
            </div>
            <div class="form-group">
                @Html.Label("Miktar : ")
                @Html.TextBoxFor(x => x.ExpenseTotal, new { @class = "form-control",@placeholder="₺" })
            </div>

            <button type="submit" class="btn btn-primary">Kaydet</button>
        </form>
    </div>
</div>



