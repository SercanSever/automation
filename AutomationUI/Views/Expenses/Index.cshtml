@using AutomationUI.Models
@model ExpenseListViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container-fluid">
    <ol class="breadcrumb mt-3 shadow">
        <li class="breadcrumb-item lead"><strong>Giderler</strong></li>
    </ol>
    <div class="row mt-3 mb-5 border-bottom border-top">
        <a class="btn btn-primary ml-sm-3 mb-sm-3 shadow" href="/Expenses/AddExpense">Gider Ekle</a>
        <table id="expenseTable" class="table table-hover table-striped table-sm p-sm-1 mt-2 mb-5 shadow">
            <thead>
                <tr>
                    <th>Açıklama</th>
                    <th>Tarih</th>
                    <th>Toplam</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var expense in Model.Expenses)
                {
                <tr>
                    <td class="p-2">@expense.ExpenseDescription</td>
                    <td class="p-2">@expense.ExpenseDate.ToShortDateString()</td>
                    <td class="p-2">@expense.ExpenseTotal ₺</td>
                    <td class="text-sm-center">
                        <a class="btn btn-warning btn-sm mr-sm-2" href="/Expenses/UpdateExpense/@expense.ExpenseId">Güncelle</a>
                    </td>
                </tr>
                }
            </tbody>

        </table>
    </div>
</div>
@Html.Partial("_Datatable")
<script>
    $('#expenseTable').DataTable({
        "language": {
            "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Turkish.json"
        }
    });
</script>




