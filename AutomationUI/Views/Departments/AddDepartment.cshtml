@using Automation.Entities.Concrete;
@model Department
@{
    ViewBag.Title = "AddDepartment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container-fluid">
    <ol class="breadcrumb shadow">
        <li class="breadcrumb-item lead mb-sm-2"><strong>Departman Ekle</strong></li>
    </ol>
    @Html.ValidationSummary(false, "", new { @style = "color:red" })
    <div class="row p-2 shadow">
        <form class="col-sm-4" method="post">
            <div class="form-group">
                @Html.Label("Departman Adı : ")
                @Html.TextBoxFor(x => x.DepartmentName, new { @class = "form-control", @placeholder = "" })      
            </div>
            <button type="submit" class="btn btn-primary">Kaydet</button>
        </form>
    </div>
</div>

