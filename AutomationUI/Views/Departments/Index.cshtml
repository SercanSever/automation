@using AutomationUI.Models;
@model DepartmentListViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container-fluid">
    <ol class="breadcrumb mt-3 shadow">
        <li class="breadcrumb-item lead"><strong>Departmanlar</strong></li>
    </ol>
    <div class="row mt-3 mb-5 border-bottom border-top">
        <a class="btn btn-primary ml-sm-3 mb-sm-3 shadow" href="/Departments/AddDepartment">Departman Ekle</a>
        <table id="departmentTable" class="table table-hover table-striped table-sm p-sm-1 mt-2 mb-5 shadow">
            <thead>
                <tr>
                    <th>Departman Adı</th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var department in Model.Departments)
                {
                    <tr>
                        <td class="p-2 col-sm-1">@department.DepartmentName</td>
                        @if (!department.IsActive)
                        {
                            <td class="p-2 text-center"><img style="width:23px" src="~/Icons/redCircle.png" alt="" /></td>
                        }
                        else
                        {
                            <td class="p-2 text-center"><img style="width:23px" src="~/Icons/greenCircle.png" alt="" /></td>
                        }
                        <td class="text-sm-left">
                            <a class="btn btn-success btn-sm text-sm-left mr-5" href="/Departments/DepartmentDetail/@department.DepartmentId">Detay</a>
                        </td>

                        <td class="text-sm-right">
                            <a class="btn btn-warning btn-sm mr-2" href="/Departments/UpdateDepartment/@department.DepartmentId">Güncelle</a>
                        </td>
                        @if (department.IsActive)
                        {
                            <td class="text-sm-left">
                                <a class="btn btn-danger btn-sm text-center mr-4" href="/Departments/DeleteDepartment/@department.DepartmentId">Kaldır</a>
                            </td>
                        }
                        else
                        {
                            <td class="text-sm-left">
                                <a class="btn btn-primary btn-sm text-center mr-4" href="/Departments/DeleteDepartment/@department.DepartmentId">Ekle</a>
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@Html.Partial("_Datatable")
<script>
    $('#departmentTable').DataTable({
        "language": {
            "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Turkish.json"
        }
    });
</script>

